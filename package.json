{
  "name": "amd-audio-tool",
  "version": "1.0.1",
  "description": "Aplicación de escritorio para descargar música y videos",
  "author": "Antony Monge  Lopez",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.tony.ml.cr",
    "productName": "AML Audio Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "AudioVideo"
    }
  },
  "devDependencies": {
    "electron": "^35.2.0",
    "electron-builder": "^26.4.0"
  }
}
